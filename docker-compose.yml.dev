version: '3.3'

services:
  dev_nginx:
    build:
      context: frontend
      dockerfile: Dockerfile.nginx.dev
    ports:
      - 80:80
    depends_on:
      - dev_frontend
      - dev_backend
  dev_frontend:
    stdin_open: true
    tty: true
    build: 
      context: frontend
      dockerfile: Dockerfile.dev
    ports:
      - 3000:3000
    volumes:
      - './frontend/:/app'
      - '/app/node_modules'
  dev_backend:
    build: backend
    command: poetry run python manage.py runserver 0:8000
    ports:
      - 8000:8000
    volumes:
      - /var/myapp/database/:/myapp/database/
